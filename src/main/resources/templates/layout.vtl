<div id="container">

    <div id="topbar"></div>

    <div id="menudiv">
        <div class="fixedwidth">

            <div id="logodiv">

                <h1><img src="/images/CCNewsLogo.png" alt="CCNewsLogo" class="logo"></h1>
                <ul>
                    <li><a href="/news">Home</a></li>
                    <li><a href="/news/sport">Sport</a></li>
